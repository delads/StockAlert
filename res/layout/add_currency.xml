<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:admobsdk="http://schemas.android.com/apk/res/com.pocketools.currency"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="none"
		android:background="#000000">	

    
    <TableLayout
    	android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:stretchColumns="1,2,3,5"
		android:shrinkColumns="1,3">
		
		<TextView
			android:padding="5sp"
			android:textColor="#ffffff"
			android:text="Currencies will be added to your portfolio list."
			/>
	
		<TextView
			android:padding="5sp"
			android:textColor="#ffffff"
			android:text="Set Alerts when your currency reaches a particular value. Add the currency to your widget Homepage =)"/>
			
		<TextView/>
		
		<TableRow android:background="#000000">
		
		<TextView android:width="5sp"/>
		
		<Spinner 
				android:prompt="@string/currency_prompt"
				android:layout_gravity="center_vertical"
				android:id="@+id/add_currency_spinner_left"/>
				
		<TextView android:text="Vs"
				  android:textSize="16sp"
				  android:paddingLeft="10sp"
				  android:paddingRight="10sp"
				  android:layout_gravity="center"
				  android:textColor="#ffffff"/>
		<Spinner 
				android:prompt="@string/currency_prompt"
				android:layout_gravity="center_vertical"
				android:id="@+id/add_currency_spinner_right"/>
		
		<TextView android:width="5sp"/>
		
		<Button
			android:paddingRight="10sp"
			android:id="@+id/add_currency_button"
			android:text="Add"/>
		
		</TableRow>
    	
    </TableLayout>

</LinearLayout>