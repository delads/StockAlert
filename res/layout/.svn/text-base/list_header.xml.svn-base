<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:admobsdk="http://schemas.android.com/apk/res/com.pocketools.currency"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="#000000">

	 	  			
	<TableLayout
		    android:stretchColumns="*"
    		android:shrinkColumns="*"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent">	
    	<TableRow>
    
						 
			<TableLayout  
						android:layout_span="2" 
						android:layout_width="fill_parent"																
						android:stretchColumns="*"
						android:shrinkColumns="*">					
				<TableRow>
					
					 <Gallery
					    android:id="@+id/gallery_portfolio"
					    android:layout_width="fill_parent"
					    android:layout_height="wrap_content"
					    android:background="@drawable/gradient_tab"/>
    
			       
							
		 	   </TableRow>
		 	 </TableLayout>
		 </TableRow>
	</TableLayout>
	
	
	 
	<com.pocketools.stockalert.TouchInterceptor 
			  android:id="@android:id/list" 
			  android:layout_width="fill_parent" 
              android:layout_height="fill_parent" 
              android:layout_weight="1" 
              android:drawSelectorOnTop="false"
              android:dividerHeight="1sp"
              android:divider="#646D7E" 
              android:fastScrollEnabled="true"          
              android:scrollbars="none"/>  

    	<TableLayout
		    android:stretchColumns="0,2"
    		android:shrinkColumns="*"
    		android:layout_height="wrap_content"
    		android:layout_width="fill_parent"
    		android:background="#ffffff"
    		android:layout_margin="0sp"
    		android:id="@+id/portfolio_list_table_layout">
    		
    	
    	<HorizontalScrollView
		        android:layout_height="55sp" 
		        android:clipToPadding="true"
		        android:scrollbars="none"
		        android:background="#000000"
		        android:layout_span="3"
		        >
		        
		         <LinearLayout android:id="@+id/horizontal_layout"
		     	android:layout_width="wrap_content"
		        android:layout_height="fill_parent" 
		        android:background="#C0C0C0"
		        android:layout_span="3"
		        android:gravity="bottom"/>
		       
		     </HorizontalScrollView>
    	
    	<!-- 
    	<TableRow >
   	   		 
		    <com.google.ads.GoogleAdView
		        android:id="@+id/adview_portfolio_list"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content" 
		        android:background="#000000"
		        android:layout_span="3"/>
		   
        
        </TableRow>
         -->



    		
    	<TableRow>	
			<TableLayout 
	    			android:layout_span="3"
	    			android:background="#ffffff">
	    		
	    		<TextView android:textSize="12sp"
			    			android:id="@+id/xrate_list_update_message"
			    			android:gravity="center"
			    			android:paddingLeft="10sp"
			    			android:background="#000000"
			    			android:textColor="#ffffff"/>
	   	    </TableLayout>	    
	   	    
		 </TableRow>
	</TableLayout>         
   

</LinearLayout>