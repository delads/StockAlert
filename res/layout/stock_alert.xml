<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="64dip"
	android:gravity="bottom"
    android:baselineAligned="false"
	android:background="#000000">
	
	<ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@android:drawable/divider_horizontal_dark" />
			
			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="64dip"
				android:gravity="center_vertical"
				android:stretchColumns="1"
				android:shrinkColumns="1">
				
				<TableRow>
				<ImageView android:id="@+id/icon" 
							android:src="@drawable/ic_mp_move"
							android:layout_width="40dip"
		        			android:layout_height="40dip"
		        			android:layout_gravity="center_vertical"/>
        			
 
				<TableLayout
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:stretchColumns="*"
					android:shrinkColumns="*">		
					<TableRow>
						<TextView 
								android:id="@+id/front_company_symbol" 
								android:textColor="#ffffff"
						        android:text="N/A"
						        android:textSize="20sp"
						        android:paddingLeft="9dip"
						        android:paddingTop="0dip"
						        android:paddingBottom="0dip"/>
						<ImageView android:id="@+id/alert_image_random"
								android:src="@drawable/alert_image"
								android:layout_width="25dip"
        						android:layout_height="25dip"
        						android:paddingTop="5sp"
        						android:layout_gravity="right"/>
						<TextView 
							android:layout_gravity="right"
							android:id="@+id/front_stock_price" 
							android:textSize="20sp"
					        android:text="N/A"
					        android:textColor="#ffffff"
					        android:paddingRight="10dip"
					        android:paddingTop="0dip"
					        android:paddingBottom="0dip"/>
					</TableRow>	
					<TableRow>
						<TextView 
							android:id="@+id/front_company_name" 
							android:textColor="#ffffff"
							android:textSize="16sp"
					        android:text="N/A"
					        android:paddingLeft="9dip"
					        android:paddingTop="0dip"
					        android:paddingBottom="0dip"/>
						<TextView/>
						<TextView 
							android:id="@+id/front_stock_change" 
							android:text="N/A"
							android:textColor="#ffffff"
							android:layout_gravity="right"
					        android:paddingRight="10dip"
					        android:paddingTop="0dip"
					        android:paddingBottom="0dip"/>
					</TableRow>	
					
					<TableRow>
						<TextView/>
						<TextView/>
						<TextView 
							android:id="@+id/front_last_update" 
							android:textColor="#ffffff"
							android:textSize="11sp"
					        android:text="updating ... "
					        android:layout_gravity="right"
					        android:paddingLeft="9dip"
					        android:paddingRight="10dip"
					        android:paddingTop="0dip"
					        android:paddingBottom="0dip"/>
						<TextView/>
						
					</TableRow>	
	
			  	</TableLayout>
				</TableRow>

			
			 </TableLayout> 	
			  	

</LinearLayout>