				android:shrinkColumns="*"
				android:id="@+id/commodity_metals_list">
						<TextView android:id="@+id/commodity_metals_loading" android:text="Loading ..." android:textColor="#FFFFFF"/>
				</TableLayout>
						
				</TableRow>
				
				<TextView android:height="5sp"/>
			</TableLayout>  
	</TableRow>
		
		<!--  End Metals Section -->
	    
	
	
	
