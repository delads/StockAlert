<ScrollView 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:scrollbars="none"
		android:background="#000000"
		android:layout_above="@id/top_text_view_commodities">	
		
	<TableLayout
			android:layout_width="fill_parent"
			android:layout_height="fill_parent"
			android:stretchColumns="*"
			android:shrinkColumns="*">

		<Gallery
			    android:id="@+id/gallery_commodities"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="@drawable/gradient_tab"/>

		
		<TextView/>
		
		<!--  Energy Section -->
		<TableRow>
		
			<TableLayout												
		    	android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:stretchColumns="1">
				
				<TextView android:height="1sp"
				  android:background="#646D7E"
				  android:layout_span="2"/>
				  
				<TableRow android:background="@drawable/gradient">
						
				<TextView 
					android:text="Energy"
					android:textSize="16sp"
					android:height="26sp"
					android:textStyle="bold"
					android:layout_gravity="left"
					android:textColor="#ffffff"/>
				</TableRow>
				
				<TableRow>
				
				<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:layout_span="3"
				android:stretchColumns="*"
				android:shrinkColumns="*"
				android:id="@+id/commodity_energy_list">
						<TextView android:id="@+id/commodity_energy_loading" android:text="Loading ..." android:textColor="#FFFFFF"/>
				</TableLayout>
						
				</TableRow>
				
				<TextView android:height="5sp"/>
			</TableLayout>  
	</TableRow>
		
		<!--  End Energy Section -->
		
		
		
		
		<!--  Metals Section -->
